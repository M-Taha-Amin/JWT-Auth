<div class="container">
  <div class="card">
    <div class="card_title">
      <h1>Login Account</h1>
    </div>
    <div class="form">
      <form action="/login" method="post">
        <input
          type="email"
          name="email"
          placeholder="Email"
          id="email"
          required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          id="password"
          required />
        <button>Login</button>
      </form>
    </div>
  </div>
</div>
