<div class="container">
  <div class="card">
    <div class="card_title">
      <h1>Create Account</h1>
    </div>
    <div class="form">
      <form action="/register" method="post">
        <input
          type="text"
          name="username"
          id="username"
          placeholder="UserName"
          required />
        <input
          type="email"
          name="email"
          placeholder="Email"
          id="email"
          required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          id="password"
          required />
        <button>Sign Up</button>
      </form>
    </div>
    <span class="registered"
      >Already have an account? <a href="login">Login</a></span
    >
  </div>
</div>
